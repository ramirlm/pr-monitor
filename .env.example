# PR Monitor Configuration
# Copy this file to .env and fill in your values

# GitHub Personal Access Token (auto-detected from gh CLI if not set)
# Get from: https://github.com/settings/tokens
# Required scopes: repo, read:org
GITHUB_TOKEN=

# GitHub Repository (auto-detected from git remote if not set)
# Format: owner/repo (e.g., "anthropics/claude-code")
GITHUB_REPO=

# Claude CLI Location (optional, defaults to 'claude')
CLAUDE_CLI=claude

# Check Interval (seconds, default: 60)
CHECK_INTERVAL=60

# Enable Debug Logging (true/false, default: false)
DEBUG=false

# Pushover Notifications (optional)
# Get your User Key from: https://pushover.net/
# Get your API Token from: https://pushover.net/apps/build
PUSHOVER_USER=
PUSHOVER_TOKEN=
